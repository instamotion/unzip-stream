{
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "chore(release): v${version}",
    "requireCleanWorkingDir": false,
    "tag": true
  },
  "@release-it/conventional-changelog": {
    "preset": "angular",
    "infile": "CHANGELOG.md"
  },
  "hooks": {
    "after:bump": "npm i --package-lock-only",
    "before:init": "git fetch --prune --prune-tags origin"
  },
  "npm": {
    "publish": true,
    "ignoreVersion": false
  }
}
